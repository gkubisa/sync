{
  "imports": {
    "std/": "https://deno.land/std@0.182.0/"
  },
  "tasks": {
    "dev": "deno run --watch server/main.ts"
  },
  "test": {
    "files": {
      "include": ["./"]
    }
  },
  "lint": {
    "files": {
      "include": ["./"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmta": {
    "files": {
      "include": ["./"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 120,
      "indentWidth": 2,
      "semiColons": false,
      "singleQuote": true,
      "proseWrap": "always"
    }
  }
}
